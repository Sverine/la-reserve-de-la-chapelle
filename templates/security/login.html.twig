{% extends 'base.html.twig' %}

{% block title %}Se connecter | La Réserve de la Chapelle{% endblock %}

{% block body %}
<div class="container-xxl box-shadow">
    {{ include ('_navigation.html.twig') }}

    <section class="m-5 text-center">
        <h1 class="mx-auto text-center my-5 mb-0">Se connecter</h1>
        <p class="mt-0">Pas encore inscrit ? <a href="{{ path('app_login') }}">S'inscrire</a></p>

    </section>

    {#  <section class="register-section mx-auto my-5 px-5">#}
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3 text-center">
                    Vous êtes déjà connecté avec l'adresse {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter ?</a>
                </div>
            {% endif %}

            <div class="login-form row mx-5 mb-5 shadow-sm rounded-4 bg-white overflow-hidden">
                <div class="p-0 col-lg-7">
                    <figure class="w-100 m-lg-0">
                        <img src="{{ 'build/images/login-img.jpg' }}" alt="image de connexion">
                    </figure>
                </div>

                <div class="col-lg-5 d-flex flex-column justify-content-xl-start justify-content-center p-2 p-lg-4 mt-xl-3">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-5" autocomplete="email" required autofocus>
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control mb-5" autocomplete="current-password" required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}

                    <button class="btn my-5 btn-sm w-100 btn-primary text-uppercase" type="submit">
                       Se connecter
                    </button>
                </div>
            </div>

        </form>
    {#  </section>#}

    {{ include ('_footer.html.twig') }}
</div>
{% endblock %}
