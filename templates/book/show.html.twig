{% extends 'base.html.twig' %}

{% block title %}{{ book.title | capitalize }} | La Réserve de la Chapelle{% endblock %}

{% block body %}
<div class="container-fluid dashboard">
    <div class="row col">
        {{ include ('_dashboard-navigation.html.twig') }}
        <div class="col mt-3 ms-5">
            {{ include ('_navigation.html.twig') }}

            <section class="mt-5 pt-5">
                <h1 class="mt-5 ps-5">Livre #{{ book.id }}</h1>
            </section>

            <section class="me-5 ps-5 d-flex">
                <figure class="book-cover-show me-5 rounded-4">
                    <img src="{{ vich_uploader_asset(book,'folderImage') }}" alt="Photo de couverture du livre" class="rounded-4">
                    <div class="book-cover-info">
                        <p class="text-white fw-bold fs-3 text-end">{{ book.title |capitalize }}</p>
                        <p class="text-white fw-light text-end">{{ book.author | title }}</p>
                    </div>

