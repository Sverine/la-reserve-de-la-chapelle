                        </svg>
                    {% endif %}

                </figure>
                <div class="col-8 d-flex flex-column ms-3 book-description-show">
                    <h2>{{ book.title | capitalize }}</h2>
                    <p class="fst-italic">par {{ book.author | title }}</p>
                    <p>Genre : {% for type in book.type %}{{ type.name | capitalize }} {% endfor %}</p>
                    <p class="fst-italic">Publié le {{ book.publishedAt ? book.publishedAt|date('d/m/Y') : '' }}</p>
                    <label>Description</label>
                    <div class="overflow-scroll">
                        <p>{{ book.description | nl2br }}</p>
                    </div>
                </div>
            </section>

            <section class="d-flex justify-content-center">
                {#  <a href="{{ path('book_index') }}">back to list</a>#}
                <form method="post" action="{{ path('book_delete', {'id': book.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="me-3">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
                    <button class="btn btn-danger text-white px-4">Supprimer</button>
                </form>
                <button class="btn btn-secondary ms-3 px-5">
                    <a class="text-white text-decoration-none" href="{{ path('book_edit', {'id': book.id}) }}">Modifier</a>
                </button>
            </section>


        </div>
    </div>
</div>
{% endblock %}

