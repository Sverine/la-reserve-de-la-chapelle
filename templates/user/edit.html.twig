{% extends 'base.html.twig' %}

{% block title %}Modifier {{ user.firstname }} {{ user.lastname }} | La Réserve de la Chapelle{% endblock %}

{% block body %}
<div class="container-fluid dashboard">
    <div class="row">
        {{ include ('_dashboard-navigation.html.twig') }}
        <div class="col-9 col-sm-10 col-xxl-11 pt-3 ps-3 ps-lg-5">
            {{ include ('_navigation.html.twig') }}

            <section class="mt-5 pt-5">
                <a class="text-uppercase fw-bold text-decoration-none" href="{{ path('user_index') }}"> &#60 Retourner aux employés</a>
                <h1 class="mt-5">Modifier {{ user.firstname }} {{ user.lastname }}</h1>
            </section>

            <section class="row my5 me-lg-5 pt-5">
                <div class="col-lg-8">
                    {{ form_start(form) }}
                    <div class="row d-flex flex-column flex-sm-row justify-content-between">
                        <div class="col-12 col-md-5  me-sm-2">{{ form_row(form.firstname) }}</div>
                        <div class="col-12 col-md-5 ms-sm-2">{{ form_row(form.lastname) }}</div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-md-5  me-sm-2">{{ form_row(form.address) }}</div>
                    </div>
                    <div class="row d-flex flex-column flex-sm-row justify-content-between">
                        <div class="col-12 col-md-5  me-sm-2">{{ form_row(form.date_birth) }}</div>
                        <div class="col-12 col-md-5 ms-sm-2">{{ form_row(form.roles) }}</div>
                    </div>
                    {{ form_rest(form) }}
                    <button class="w-100 mb-5 mt-3 btn btn-primary connect-button text-uppercase" type="submit">Modifier</button>
                    {{ form_end(form) }}
                </div>
            </section>


        </div>
    </div>
</div>
{% endblock %}




